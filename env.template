# WeFuel Application Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=5000
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://admin:password123@mongodb:27017/wefuel?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=wefuel

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================

# Yoco Payment Gateway
YOCO_PUBLIC_KEY=pk_test_your-yoco-public-key
YOCO_SECRET_KEY=sk_test_your-yoco-secret-key

# Ozow Payment Gateway
OZOW_SITE_CODE=your-ozow-site-code
OZOW_PRIVATE_KEY=your-ozow-private-key
OZOW_API_KEY=your-ozow-api-key
OZOW_COUNTRY_CODE=ZA
OZOW_CURRENCY_CODE=ZAR

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+27123456789

# Email Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Load Shedding API (EskomSePush)
ESKOM_API_KEY=your-eskom-api-key

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:5000
REACT_APP_SOCKET_URL=http://localhost:5000
REACT_APP_YOCO_PUBLIC_KEY=pk_test_your-yoco-public-key
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
REACT_APP_GA_TRACKING_ID=your-google-analytics-tracking-id

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# BUSINESS LOGIC CONFIGURATION
# =============================================================================
MINIMUM_ORDER_AMOUNT=50
PLATFORM_COMMISSION_PERCENTAGE=10
VAT_PERCENTAGE=15
LOAD_SHEDDING_SURCHARGE_PERCENTAGE=5
AREA_SURCHARGE_PERCENTAGE=2

# =============================================================================
# DRIVER CONFIGURATION
# =============================================================================
DRIVER_SIGN_ON_FEE=500
DRIVER_REFERRAL_BONUS=100
DRIVER_TRAINING_REQUIRED=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=WeFuel

# =============================================================================
# DEVELOPMENT CONFIGURATION (for local development)
# =============================================================================
# Uncomment these lines for local development
# NODE_ENV=development
# MONGODB_URI=mongodb://localhost:27017/wefuel
# REDIS_URL=redis://localhost:6379
# CLIENT_URL=http://localhost:3000
# API_URL=http://localhost:5000
