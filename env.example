# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/wefuel
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/wefuel

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Payment Gateway Configuration
# Yoco (Card Payments)
YOCO_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxx
YOCO_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxx

# Ozow (Instant EFT)
OZOW_SITE_CODE=your-ozow-site-code
OZOW_PRIVATE_KEY=your-ozow-private-key
OZOW_API_KEY=your-ozow-api-key

# External APIs
# EskomSePush API (Load-shedding data)
ESKOMSEPUSH_API_KEY=your-eskomsepush-api-key

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+27123456789

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-app-password
EMAIL_FROM=noreply@wefuel.co.za

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880 # 5MB

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Business Configuration
PLATFORM_COMMISSION_RATE=0.10 # 10%
MINIMUM_ORDER_AMOUNT=50.00
DELIVERY_RADIUS_KM=50

# Load-shedding Surcharge Configuration
LOADSHEDDING_SURCHARGE_RATES={"1": 0.05, "2": 0.10, "3": 0.15, "4": 0.20}

# Area Surcharge Configuration (JSON string)
AREA_SURCHARGES={"sandton": 0.15, "rosebank": 0.10, "melville": 0.05}

# VAT Configuration
VAT_RATE=0.15 # 15%

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_SOCKET_URL=http://localhost:5000
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Development Configuration
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_LOGGING=true

# Production Configuration
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true

# Monitoring Configuration
ENABLE_METRICS=false
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# FICA Configuration
FICA_VERIFICATION_ENABLED=true
FICA_API_KEY=your-fica-api-key
FICA_API_URL=https://api.fica-verification.co.za

# Driver Referral Configuration
DRIVER_REFERRAL_BONUS=500.00
DRIVER_SIGNUP_FEE=1000.00
REFERRAL_BONUS_CONDITIONS={"completed_orders": 10, "rating": 4.5}

# Training Configuration
DRIVER_TRAINING_ENABLED=true
TRAINING_QUIZ_PASS_SCORE=80
TRAINING_VIDEO_URL=https://training.wefuel.co.za

# Support Configuration
SUPPORT_EMAIL=support@wefuel.co.za
SUPPORT_PHONE=+27123456789
SUPPORT_HOURS=24/7

# Legal Configuration
TERMS_OF_SERVICE_URL=https://wefuel.co.za/terms
PRIVACY_POLICY_URL=https://wefuel.co.za/privacy
RETURN_POLICY_URL=https://wefuel.co.za/returns

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
FACEBOOK_PIXEL_ID=XXXXXXXXXX

# Social Media Configuration
FACEBOOK_APP_ID=your-facebook-app-id
TWITTER_HANDLE=@wefuel_sa
INSTAGRAM_HANDLE=@wefuel_sa

# Emergency Configuration
EMERGENCY_CONTACT=+27123456789
EMERGENCY_EMAIL=emergency@wefuel.co.za

# Maintenance Configuration
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We're currently performing maintenance. Please check back soon.

# Feature Flags
ENABLE_CONVENIENCE_STORE=true
ENABLE_DRIVER_RATINGS=true
ENABLE_CUSTOMER_REVIEWS=true
ENABLE_LOYALTY_PROGRAM=false
ENABLE_PROMOTIONS=true
